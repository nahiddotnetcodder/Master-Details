@model MasterDetails.Models.Applicant

@{
    ViewData["Title"] = "Details";
}


<div class="col-md-11 mx-0">
    <div class="card col-md-12 p-2">
        <div class="col-md-12 bg-success">
            <h3>Details</h3>
        </div>
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="col-md-12">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" readonly/>
                           
                        </div>
                        <div class="form-group">
                            <label asp-for="Gender" class="control-label"></label>
                            <input asp-for="Gender" class="form-control" readonly />
                            
                        </div>
                        <div class="form-group">
                            <label asp-for="Age" class="control-label"></label>
                            <input asp-for="Age" class="form-control" readonly />
                           
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="TotalExperience" class="control-label"></label>
                            <input asp-for="TotalExperience" class="form-control" readonly />
                            
                        </div>
                        <div class="form-group">
                            <label asp-for="Qualification" class="control-label"></label>
                            <input asp-for="Qualification" class="form-control" readonly />
                            
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <table id="ExpTable" class="table tabletable-striped border mt-2">
                    <thead>
                        <tr>
                            <th>Company Name</th>
                            <th>Designation</th>
                            <th>YearsWorked</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Experiences.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input asp-for="@Model.Experiences[i].CompanyName" class="form-control" readonly>
                                </td>
                                <td>
                                    <input asp-for="@Model.Experiences[i].Designation" class="form-control" readonly>
                                </td>
                                <td>
                                    <input asp-for="@Model.Experiences[i].YearsWorked" class="form-control" readonly>
                                </td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <input type="hidden" id="hdnLastIndex" value="0" />


            <div class="form-group">
                
                <a asp-action="index" class="btn btn-success"> Back</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
